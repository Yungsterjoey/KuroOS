<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">
  <title>Kuro — AI & Cloud Computing</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
    html, body {
      font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', system-ui, sans-serif;
      background: #000;
      color: #fff;
      overflow-x: hidden;
      min-height: 100vh;
      width: 100%;
    }
    
    #smoke { position: fixed; inset: 0; z-index: 0; }
    
    #hero-cube {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 180px;
      height: 180px;
      z-index: 1;
      touch-action: none;
    }
    
    /* NAV */
    nav {
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 100;
      padding: 12px 16px;
    }
    .nav-glass {
      max-width: 560px;
      margin: 0 auto;
      padding: 10px 16px;
      border-radius: 22px;
      background: rgba(28, 24, 38, 0.7);
      backdrop-filter: blur(40px) saturate(180%);
      -webkit-backdrop-filter: blur(40px) saturate(180%);
      display: flex;
      align-items: center;
      justify-content: space-between;
      position: relative;
      border: 1.5px solid transparent;
      background-image: linear-gradient(rgba(28,24,38,0.7), rgba(28,24,38,0.7)), 
                        linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(168,130,255,0.1) 25%, rgba(168,130,255,0.05) 50%, rgba(168,130,255,0.1) 75%, rgba(255,255,255,0.08) 100%);
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 8px 32px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .nav-logo {
      display: flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
      color: inherit;
      z-index: 1;
    }
    .nav-logo span {
      font-size: 16px;
      font-weight: 600;
      background: linear-gradient(135deg, #c9b8ff, #a78bfa);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .nav-right {
      display: flex;
      align-items: center;
      gap: 8px;
      z-index: 1;
    }
    .nav-btn {
      padding: 8px 16px;
      border-radius: 12px;
      font-size: 13px;
      font-weight: 600;
      text-decoration: none;
      background: linear-gradient(135deg, #8b5cf6, #7c3aed);
      color: #fff;
      position: relative;
      overflow: hidden;
      border: 1px solid rgba(255,255,255,0.08);
      box-shadow: 0 4px 16px rgba(139,92,246,0.3), inset 0 1px 0 rgba(255,255,255,0.25);
    }
    
    /* USER MENU */
    .user-menu-btn {
      width: 36px;
      height: 36px;
      border-radius: 10px;
      background: rgba(255,255,255,0.08);
      border: 1px solid rgba(255, 255, 255, 0.06);
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: background 0.2s;
    }
    .user-menu-btn:hover { background: rgba(255,255,255,0.12); }
    .user-menu-btn svg { width: 18px; height: 18px; stroke: rgba(255,255,255,0.7); fill: none; stroke-width: 2; }
    
    .dropdown {
      position: absolute;
      top: calc(100% + 8px);
      right: 0;
      min-width: 200px;
      padding: 8px;
      border-radius: 16px;
      background: rgba(28, 24, 38, 0.95);
      backdrop-filter: blur(40px);
      -webkit-backdrop-filter: blur(40px);
      border: 1.5px solid transparent;
      background-image: linear-gradient(rgba(28,24,38,0.95), rgba(28,24,38,0.95)), 
                        linear-gradient(135deg, rgba(255,255,255,0.08), rgba(168,130,255,0.1), rgba(255, 255, 255, 0.06));
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 16px 48px rgba(0,0,0,0.5);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-8px) scale(0.95);
      transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .dropdown.open { opacity: 1; visibility: visible; transform: translateY(0) scale(1); }
    .dropdown-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 14px;
      border-radius: 10px;
      font-size: 14px;
      color: rgba(255,255,255,0.8);
      text-decoration: none;
      transition: background 0.15s;
      cursor: pointer;
      border: none;
      background: none;
      width: 100%;
      text-align: left;
    }
    .dropdown-item:hover { background: rgba(255,255,255,0.08); color: #fff; }
    .dropdown-item svg { width: 18px; height: 18px; stroke: currentColor; fill: none; stroke-width: 1.8; }
    .dropdown-divider { height: 1px; background: rgba(255,255,255,0.08); margin: 6px 0; }
    
    /* MAIN */
    main { position: relative; z-index: 10; width: 100%; max-width: 100vw; }
    
    .hero {
      min-height: 100vh;
      min-height: 100dvh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 100px 20px 60px;
      text-align: center;
      width: 100%;
    }
    .hero-spacer { width: 180px; height: 180px; margin-bottom: 28px; flex-shrink: 0; }
    .badge {
      display: inline-flex;
      padding: 8px 16px;
      margin-bottom: 20px;
      border-radius: 100px;
      font-size: 13px;
      font-weight: 500;
      color: #c9b8ff;
      background: rgba(139,92,246,0.15);
      border: 1px solid rgba(139,92,246,0.3);
    }
    .hero h1 {
      font-size: clamp(32px, 8vw, 56px);
      font-weight: 700;
      line-height: 1.1;
      margin-bottom: 16px;
      letter-spacing: -0.03em;
    }
    .hero h1 .grad {
      background: linear-gradient(135deg, #c9b8ff, #a78bfa, #8b5cf6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .hero p {
      font-size: 16px;
      color: rgba(255,255,255,0.5);
      max-width: 360px;
      margin: 0 auto 32px;
      line-height: 1.6;
    }
    .hero-btns {
      display: flex;
      flex-direction: column;
      gap: 12px;
      width: 100%;
      max-width: 260px;
    }
    
    /* LIQUID GLASS BUTTONS */
    .btn {
      display: block;
      padding: 14px 28px;
      border-radius: 16px;
      font-size: 15px;
      font-weight: 600;
      text-decoration: none;
      text-align: center;
      transition: transform 0.15s, box-shadow 0.15s;
      position: relative;
      overflow: hidden;
    }
    .btn:active { transform: scale(0.97); }
    
    .btn-primary {
      background: linear-gradient(135deg, #8b5cf6, #7c3aed);
      color: #fff;
      border: 1.5px solid transparent;
      background-image: linear-gradient(135deg, #8b5cf6, #7c3aed), 
                        linear-gradient(135deg, rgba(255,255,255,0.15) 0%, rgba(255, 255, 255, 0.04) 30%, rgba(255, 255, 255, 0.04) 70%, rgba(255,255,255,0.12) 100%);
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 8px 24px rgba(139,92,246,0.4), inset 0 1px 0 rgba(255,255,255,0.3);
    }
    
    .btn-glass {
      background: rgba(32, 28, 42, 0.7);
      backdrop-filter: blur(30px);
      -webkit-backdrop-filter: blur(30px);
      color: #fff;
      border: 1.5px solid transparent;
      background-image: linear-gradient(rgba(32,28,42,0.7), rgba(32,28,42,0.7)), 
                        linear-gradient(135deg, rgba(255,255,255,0.12) 0%, rgba(255, 255, 255, 0.03) 30%, rgba(255, 255, 255, 0.03) 70%, rgba(255,255,255,0.1) 100%);
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 8px 24px rgba(0,0,0,0.3), inset 0 1px 0 rgba(255,255,255,0.12);
    }
    
    /* PRODUCTS */
    .products {
      padding: 40px 16px 80px;
      position: relative;
      z-index: 10;
      width: 100%;
    }
    .products-grid {
      display: grid;
      gap: 16px;
      max-width: 100%;
      width: 100%;
      padding: 0;
    }
    
    /* LIQUID GLASS CARD */
    .card {
      padding: 24px;
      border-radius: 24px;
      background: rgba(26, 22, 36, 0.75);
      backdrop-filter: blur(40px) saturate(180%);
      -webkit-backdrop-filter: blur(40px) saturate(180%);
      position: relative;
      overflow: hidden;
      border: 1.5px solid transparent;
      background-image: linear-gradient(rgba(26,22,36,0.75), rgba(26,22,36,0.75)), 
                        linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(168,130,255,0.1) 20%, rgba(168,130,255,0.05) 50%, rgba(168,130,255,0.1) 80%, rgba(255,255,255,0.08) 100%);
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 16px 48px rgba(0,0,0,0.4), inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .card-content { position: relative; z-index: 1; }
    .card-header { display: flex; align-items: center; gap: 14px; margin-bottom: 14px; }
    .card-icon { width: 44px; height: 44px; }
    .card h3 { font-size: 20px; font-weight: 600; }
    .tag {
      display: inline-block;
      padding: 2px 8px;
      margin-left: 6px;
      border-radius: 100px;
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      background: rgba(52,211,153,0.15);
      color: #6ee7b7;
      border: 1px solid rgba(52,211,153,0.25);
      vertical-align: middle;
    }
    .card .subtitle { font-size: 13px; color: rgba(255,255,255,0.4); margin-bottom: 10px; }
    .card p { font-size: 14px; color: rgba(255,255,255,0.6); line-height: 1.6; margin-bottom: 16px; }
    .card ul { list-style: none; margin-bottom: 16px; }
    .card li { display: flex; align-items: center; gap: 10px; padding: 5px 0; font-size: 13px; color: rgba(255,255,255,0.7); }
    .card .btn { width: 100%; padding: 12px 20px; font-size: 14px; }
    
    /* FOOTER */
    footer {
      padding: 32px 16px;
      border-top: 1px solid rgba(255,255,255,0.05);
      position: relative;
      z-index: 10;
      text-align: center;
    }
    .footer-logo { display: inline-flex; align-items: center; gap: 8px; margin-bottom: 12px; }
    .footer-logo span { font-weight: 600; font-size: 14px; background: linear-gradient(135deg, #c9b8ff, #a78bfa); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
    .footer-links { display: flex; justify-content: center; gap: 20px; margin-bottom: 12px; }
    .footer-links a { color: rgba(255,255,255,0.4); text-decoration: none; font-size: 13px; }
    .footer-copy { color: rgba(255,255,255,0.2); font-size: 12px; }
    
    /* AUTH MODAL */
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.7);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      z-index: 200;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      opacity: 0;
      visibility: hidden;
      transition: all 0.25s;
    }
    .modal-overlay.open { opacity: 1; visibility: visible; }
    .modal {
      width: 100%;
      max-width: 360px;
      padding: 28px;
      border-radius: 24px;
      background: rgba(26, 22, 36, 0.95);
      border: 1.5px solid transparent;
      background-image: linear-gradient(rgba(26,22,36,0.95), rgba(26,22,36,0.95)), 
                        linear-gradient(145deg, rgba(255,255,255,0.1), rgba(168,130,255,0.1), rgba(255,255,255,0.08));
      background-origin: border-box;
      background-clip: padding-box, border-box;
      box-shadow: 0 24px 64px rgba(0,0,0,0.6);
      transform: translateY(20px) scale(0.95);
      transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .modal-overlay.open .modal { transform: translateY(0) scale(1); }
    .modal h2 { font-size: 22px; font-weight: 600; margin-bottom: 8px; text-align: center; }
    .modal-subtitle { font-size: 14px; color: rgba(255,255,255,0.5); text-align: center; margin-bottom: 24px; }
    .input-group { margin-bottom: 16px; }
    .input-group label { display: block; font-size: 13px; color: rgba(255,255,255,0.6); margin-bottom: 6px; }
    .input-group input {
      width: 100%;
      padding: 12px 14px;
      border-radius: 12px;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255, 255, 255, 0.04);
      color: #fff;
      font-size: 15px;
      outline: none;
      transition: border-color 0.2s, background 0.2s;
    }
    .input-group input:focus { border-color: rgba(255,255,255,0.1); background: rgba(255,255,255,0.08); }
    .input-group input::placeholder { color: rgba(255,255,255,0.3); }
    .modal .btn { margin-top: 8px; }
    .modal-footer { text-align: center; margin-top: 20px; font-size: 13px; color: rgba(255,255,255,0.5); }
    .modal-footer a { color: #a78bfa; text-decoration: none; }
    .modal-close {
      position: absolute;
      top: 16px;
      right: 16px;
      width: 32px;
      height: 32px;
      border-radius: 8px;
      background: rgba(255,255,255,0.06);
      border: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .modal-close svg { width: 16px; height: 16px; stroke: rgba(255,255,255,0.5); }
    .biometric-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      background: rgba(255,255,255,0.06);
      border: 1px solid rgba(255, 255, 255, 0.04);
      color: rgba(255,255,255,0.8);
      font-size: 14px;
      cursor: pointer;
      margin-bottom: 16px;
      transition: background 0.2s;
    }
    .biometric-btn:hover { background: rgba(255,255,255,0.1); }
    .biometric-btn svg { width: 20px; height: 20px; }
    .divider {
      display: flex;
      align-items: center;
      gap: 12px;
      margin: 20px 0;
      color: rgba(255,255,255,0.3);
      font-size: 12px;
    }
    .divider::before, .divider::after { content: ''; flex: 1; height: 1px; background: rgba(255,255,255,0.1); }
    
    /* RESPONSIVE */
    @media (min-width: 480px) {
      .products-grid { max-width: 420px; margin: 0 auto; }
    }
    @media (min-width: 768px) {
      nav { padding: 16px 24px; }
      .nav-glass { max-width: 640px; padding: 12px 20px; }
      .hero { padding: 120px 32px 80px; }
      .hero h1 { font-size: 52px; }
      .hero p { font-size: 17px; max-width: 420px; }
      .hero-btns { flex-direction: row; max-width: none; width: auto; }
      .hero-btns .btn { padding: 14px 32px; }
      .products { padding: 60px 24px 100px; }
      .products-grid { grid-template-columns: repeat(2, 1fr); max-width: 720px; gap: 20px; }
      .card { padding: 28px; }
    }
    @media (min-width: 1024px) {
      #hero-cube { width: 220px; height: 220px; }
      .hero-spacer { width: 220px; height: 220px; }
      .hero h1 { font-size: 60px; }
      .products-grid { max-width: 840px; gap: 24px; }
    }
  </style>
</head>
<body>
  <canvas id="smoke"></canvas>
  <div id="hero-cube"></div>
  
  <nav>
    <div class="nav-glass" id="nav-glass">
      <a href="/" class="nav-logo">
        <div id="nav-cube"></div>
        <span>Kuro</span>
      </a>
      <div class="nav-right">
        <a href="/chat" class="nav-btn">Try Free</a>
        <div class="user-menu-btn" id="userMenuBtn">
          <svg viewBox="0 0 24 24"><circle cx="12" cy="8" r="4"/><path d="M4 20c0-4 4-6 8-6s8 2 8 6"/></svg>
        </div>
        <div class="dropdown" id="userDropdown">
          <button class="dropdown-item" onclick="openModal('login')">
            <svg viewBox="0 0 24 24"><path d="M15 3h4a2 2 0 012 2v14a2 2 0 01-2 2h-4M10 17l5-5-5-5M15 12H3"/></svg>
            Sign In
          </button>
          <button class="dropdown-item" onclick="openModal('register')">
            <svg viewBox="0 0 24 24"><path d="M16 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="8.5" cy="7" r="4"/><line x1="20" y1="8" x2="20" y2="14"/><line x1="23" y1="11" x2="17" y2="11"/></svg>
            Create Account
          </button>
          <div class="dropdown-divider"></div>
          <button class="dropdown-item">
            <svg viewBox="0 0 24 24"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z"/></svg>
            Settings
          </button>
        </div>
      </div>
    </div>
  </nav>
  
  <main>
    <section class="hero">
      <div class="hero-spacer"></div>
      <div class="badge">Introducing KuroGPT — Free AI for Everyone</div>
      <h1>Where <span class="grad">Technology</span><br>Meets Liberty</h1>
      <p>Experience the future of AI and cloud computing. Free, private, and beautifully designed.</p>
      <div class="hero-btns">
        <a href="/chat" class="btn btn-primary">Try KuroGPT Free</a>
        <a href="/desktop-react" class="btn btn-glass">Explore KuroGlass</a>
      </div>
    </section>
    
    <section class="products">
      <div class="products-grid">
        <div class="card" id="card1">
          <div class="card-content">
            <div class="card-header">
              <div class="card-icon" id="icon-chat"></div>
              <div>
                <h3>KuroGPT <span class="tag">Free</span></h3>
                <div class="subtitle">AI Companion for Everyone</div>
              </div>
            </div>
            <p>A thoughtful AI assistant. No subscriptions, no ads, your data stays yours.</p>
            <ul>
              <li><div class="li-icon"></div>5 free conversations daily</li>
              <li><div class="li-icon"></div>Glass-inspired interface</li>
              <li><div class="li-icon"></div>Privacy first design</li>
            </ul>
            <a href="/chat" class="btn btn-primary">Start Chatting</a>
          </div>
        </div>
        
        <div class="card" id="card2">
          <div class="card-content">
            <div class="card-header">
              <div class="card-icon" id="icon-cube"></div>
              <div>
                <h3>KuroGlass</h3>
                <div class="subtitle">Personal Cloud OS</div>
              </div>
            </div>
            <p>Transform any server into your private cloud desktop with full OS experience.</p>
            <ul>
              <li><div class="li-icon"></div>Full desktop environment</li>
              <li><div class="li-icon"></div>Terminal & file management</li>
              <li><div class="li-icon"></div>Self-hosted & secure</li>
            </ul>
            <a href="/desktop-react" class="btn btn-glass">Launch Desktop</a>
          </div>
        </div>
      </div>
    </section>
    
    <footer>
      <div class="footer-logo">
        <div id="footer-cube"></div>
        <span>Kuro</span>
      </div>
      <div class="footer-links">
        <a href="/chat">KuroGPT</a>
        <a href="/desktop-react">KuroGlass</a>
        <a href="https://github.com/kuroglass">GitHub</a>
      </div>
      <div class="footer-copy">© 2025 Kuro. Technology meets liberty.</div>
    </footer>
  </main>
  
  <!-- Auth Modal -->
  <div class="modal-overlay" id="authModal">
    <div class="modal" style="position:relative;">
      <button class="modal-close" onclick="closeModal()">
        <svg viewBox="0 0 24 24" fill="none" stroke-width="2"><path d="M18 6L6 18M6 6l12 12"/></svg>
      </button>
      <h2 id="modalTitle">Sign In</h2>
      <p class="modal-subtitle" id="modalSubtitle">Welcome back to Kuro</p>
      
      <button class="biometric-btn" id="biometricBtn">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <path d="M12 11c0-1.1.9-2 2-2s2 .9 2 2-2 4-2 4"/>
          <path d="M8 15c0-2.2 1.8-4 4-4"/>
          <path d="M16 8c-2.2 0-4 1.8-4 4v4"/>
          <path d="M7 10.5V7a5 5 0 0110 0v3"/>
          <rect x="3" y="14" width="18" height="8" rx="2"/>
        </svg>
        Sign in with Biometrics
      </button>
      
      <div class="divider">or continue with username</div>
      
      <form id="authForm">
        <div class="input-group">
          <label>Username</label>
          <input type="text" id="username" placeholder="Choose a username" autocomplete="username" required>
        </div>
        <div class="input-group">
          <label>Password</label>
          <input type="password" id="password" placeholder="Enter password" autocomplete="current-password" required>
        </div>
        <button type="submit" class="btn btn-primary" id="submitBtn">Sign In</button>
      </form>
      
      <div class="modal-footer">
        <span id="modalFooterText">Don't have an account?</span>
        <a href="#" id="modalToggle" onclick="toggleAuthMode(event)">Create one</a>
      </div>
    </div>
  </div>

<script>
// ============================================
// SMOKE BACKGROUND
// ============================================
const canvas = document.getElementById('smoke');
const ctx = canvas.getContext('2d');

function resizeCanvas() {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
}
resizeCanvas();
window.addEventListener('resize', resizeCanvas);

const smokeParticles = [];
for (let i = 0; i < 10; i++) {
  smokeParticles.push({
    x: Math.random() * window.innerWidth,
    y: Math.random() * window.innerHeight,
    r: 250 + Math.random() * 350,
    vx: (Math.random() - 0.5) * 0.3,
    vy: (Math.random() - 0.5) * 0.3,
    hue: 270 + Math.random() * 30,
    alpha: 0.025 + Math.random() * 0.02,
  });
}

function animateSmoke() {
  ctx.fillStyle = '#08060d';
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  
  smokeParticles.forEach(p => {
    p.x += p.vx;
    p.y += p.vy;
    if (p.x < -p.r) p.x = canvas.width + p.r;
    if (p.x > canvas.width + p.r) p.x = -p.r;
    if (p.y < -p.r) p.y = canvas.height + p.r;
    if (p.y > canvas.height + p.r) p.y = -p.r;
    
    const gradient = ctx.createRadialGradient(p.x, p.y, 0, p.x, p.y, p.r);
    gradient.addColorStop(0, `hsla(${p.hue}, 70%, 50%, ${p.alpha})`);
    gradient.addColorStop(1, 'transparent');
    ctx.beginPath();
    ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
    ctx.fillStyle = gradient;
    ctx.fill();
  });
  
  requestAnimationFrame(animateSmoke);
}
animateSmoke();

// ============================================
// CONDENSATION - Realistic Water Droplets
// ============================================
function addCondensation(element, seed = 0) {
  const canvas = document.createElement('canvas');
  canvas.style.cssText = 'position:absolute;inset:0;pointer-events:none;border-radius:inherit;width:100%;height:100%;';
  element.style.position = 'relative';
  element.appendChild(canvas);
  
  const resize = () => {
    const rect = element.getBoundingClientRect();
    canvas.width = rect.width * 2;
    canvas.height = rect.height * 2;
    drawDroplets();
  };
  
  const rand = (s) => { const x = Math.sin(s) * 10000; return x - Math.floor(x); };
  
  const drawDroplets = () => {
    const ctx = canvas.getContext('2d');
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    
    const count = 8 + Math.floor(rand(seed) * 6);
    
    for (let i = 0; i < count; i++) {
      const s = seed + i * 137.5;
      const size = (3 + rand(s) * 8) * 2;
      const x = rand(s + 1) * canvas.width;
      const y = rand(s + 2) * canvas.height;
      
      // Draw realistic water droplet
      ctx.save();
      ctx.translate(x, y);
      
      // Main droplet body - subtle
      const gradient = ctx.createRadialGradient(0, 0, 0, 0, 0, size);
      gradient.addColorStop(0, 'rgba(255,255,255,0.02)');
      gradient.addColorStop(0.5, 'rgba(255,255,255,0.015)');
      gradient.addColorStop(0.8, 'rgba(255,255,255,0.03)');
      gradient.addColorStop(1, 'rgba(255,255,255,0)');
      
      ctx.beginPath();
      ctx.arc(0, 0, size, 0, Math.PI * 2);
      ctx.fillStyle = gradient;
      ctx.fill();
      
      // Highlight - top left
      const hlGrad = ctx.createRadialGradient(-size*0.3, -size*0.3, 0, -size*0.3, -size*0.3, size*0.5);
      hlGrad.addColorStop(0, 'rgba(255,255,255,0.08)');
      hlGrad.addColorStop(1, 'rgba(255,255,255,0)');
      ctx.beginPath();
      ctx.arc(-size*0.3, -size*0.3, size*0.5, 0, Math.PI * 2);
      ctx.fillStyle = hlGrad;
      ctx.fill();
      
      ctx.restore();
    }
    
    // Tiny droplets
    for (let i = 0; i < 15; i++) {
      const s = seed + i * 73.7 + 500;
      const size = (1 + rand(s) * 2) * 2;
      const x = rand(s + 1) * canvas.width;
      const y = rand(s + 2) * canvas.height;
      
      ctx.beginPath();
      ctx.arc(x, y, size, 0, Math.PI * 2);
      ctx.fillStyle = 'rgba(255,255,255,0.025)';
      ctx.fill();
    }
  };
  
  resize();
  window.addEventListener('resize', resize);
}

// ============================================
// GLASS CUBE - GameCube Purple, Smooth Animation
// ============================================
class GlassCube {
  constructor(container, size) {
    this.container = container;
    this.size = size;
    this.blockSize = size / 4;
    this.gap = size * 0.02;
    this.blocks = [];
    this.rotation = { x: -25, y: 30 };
    this.targetRotation = { x: -25, y: 30 };
    this.autoRotate = true;
    this.isDragging = false;
    this.lastPos = { x: 0, y: 0 };
    this.momentum = { x: 0, y: 0 };
    
    this.build();
    this.animate();
    this.startBlockAnims();
  }
  
  build() {
    this.scene = document.createElement('div');
    this.scene.style.cssText = `width:${this.size}px;height:${this.size}px;perspective:${this.size*5}px;cursor:grab;`;
    
    this.group = document.createElement('div');
    this.group.style.cssText = `width:100%;height:100%;position:relative;transform-style:preserve-3d;will-change:transform;`;
    
    // GameCube purple - single color palette
    const purple = '#4c1d95';
    
    const offset = this.blockSize + this.gap;
    
    for (let x = 0; x < 3; x++) {
      for (let y = 0; y < 3; y++) {
        for (let z = 0; z < 3; z++) {
          const block = this.createBlock(
            (x - 1) * offset,
            (y - 1) * offset,
            (z - 1) * offset,
            purple,
            x, y, z
          );
          this.group.appendChild(block.el);
          this.blocks.push(block);
        }
      }
    }
    
    this.scene.appendChild(this.group);
    this.container.appendChild(this.scene);
    this.setupInteraction();
  }
  
  createBlock(x, y, z, color, gx, gy, gz) {
    const s = this.blockSize;
    const el = document.createElement('div');
    el.style.cssText = `
      position:absolute;width:${s}px;height:${s}px;left:50%;top:50%;
      margin-left:${-s/2}px;margin-top:${-s/2}px;transform-style:preserve-3d;
      will-change:transform;
    `;
    
    const faces = [
      { rx: 0, ry: 0, tz: s/2 },
      { rx: 0, ry: 180, tz: s/2 },
      { rx: 0, ry: 90, tz: s/2 },
      { rx: 0, ry: -90, tz: s/2 },
      { rx: 90, ry: 0, tz: s/2 },
      { rx: -90, ry: 0, tz: s/2 },
    ];
    
    faces.forEach((f, fi) => {
      const face = document.createElement('div');
      // Vary shade slightly per face for depth
      const shade = 1 + (fi * 0.08);
      face.style.cssText = `
        position:absolute;width:${s}px;height:${s}px;
        background:linear-gradient(135deg, 
          rgba(12, 8, 18, 0.4) 0%,
          rgba(15, 10, 22, 0.35) 50%,
          rgba(12, 8, 18, 0.4) 100%);
        border:0.5px solid rgba(255, 255, 255, 0.06);
        transform:rotateX(${f.rx}deg) rotateY(${f.ry}deg) translateZ(${f.tz}px);
        backface-visibility:hidden;
        box-shadow:inset 0 1px 1px rgba(255,255,255,0.15);
      `;
      // Shine
      const shine = document.createElement('div');
      shine.style.cssText = `position:absolute;inset:0;background:linear-gradient(135deg,rgba(255,255,255,0.2),transparent 50%);`;
      face.appendChild(shine);
      el.appendChild(face);
    });
    
    // Valid animation directions
    const validDirs = [];
    if (gx === 0) validDirs.push({ axis: 'x', sign: -1 });
    if (gx === 2) validDirs.push({ axis: 'x', sign: 1 });
    if (gy === 0) validDirs.push({ axis: 'y', sign: -1 });
    if (gy === 2) validDirs.push({ axis: 'y', sign: 1 });
    if (gz === 0) validDirs.push({ axis: 'z', sign: -1 });
    if (gz === 2) validDirs.push({ axis: 'z', sign: 1 });
    
    return { 
      el, baseX: x, baseY: y, baseZ: z, gx, gy, gz,
      offset: {x:0,y:0,z:0}, vel: {x:0,y:0,z:0}, target: {x:0,y:0,z:0},
      animating: false,
      validDirs: validDirs.length > 0 ? validDirs : [{ axis: 'y', sign: -1 }]
    };
  }
  
  setupInteraction() {
    const getPos = e => e.touches ? { x: e.touches[0].clientX, y: e.touches[0].clientY } : { x: e.clientX, y: e.clientY };
    
    const start = e => {
      this.isDragging = true;
      this.autoRotate = false;
      this.lastPos = getPos(e);
      this.momentum = { x: 0, y: 0 };
      this.scene.style.cursor = 'grabbing';
    };
    
    const move = e => {
      if (!this.isDragging) return;
      const pos = getPos(e);
      const dx = pos.x - this.lastPos.x;
      const dy = pos.y - this.lastPos.y;
      
      this.targetRotation.y += dx * 0.5;
      this.targetRotation.x = Math.max(-80, Math.min(80, this.targetRotation.x - dy * 0.5));
      
      this.momentum = { x: dy * 0.1, y: dx * 0.1 };
      this.lastPos = pos;
    };
    
    const end = () => {
      this.isDragging = false;
      this.scene.style.cursor = 'grab';
      // Continue with momentum
      setTimeout(() => {
        if (!this.isDragging && Math.abs(this.momentum.x) < 0.5 && Math.abs(this.momentum.y) < 0.5) {
          this.autoRotate = true;
        }
      }, 2000);
    };
    
    this.scene.addEventListener('mousedown', start);
    this.scene.addEventListener('touchstart', start, { passive: true });
    window.addEventListener('mousemove', move);
    window.addEventListener('touchmove', move, { passive: true });
    window.addEventListener('mouseup', end);
    window.addEventListener('touchend', end);
  }
  
  startBlockAnims() {
    const pull = () => {
      const available = this.blocks.filter(b => !b.animating);
      if (available.length === 0) return;
      const b = available[Math.floor(Math.random() * available.length)];
      b.animating = true;
      
      const dir = b.validDirs[Math.floor(Math.random() * b.validDirs.length)];
      const amt = (10 + Math.random() * 15) * dir.sign;
      b.target[dir.axis] = amt;
      
      setTimeout(() => {
        b.target = {x:0,y:0,z:0};
        setTimeout(() => b.animating = false, 400);
      }, 150);
    };
    
    setInterval(pull, 2000);
    setTimeout(pull, 500);
  }
  
  animate() {
    // Smooth rotation with lerp
    if (this.autoRotate) {
      this.targetRotation.y += 0.3;
    } else {
      // Apply momentum decay
      this.targetRotation.y += this.momentum.y;
      this.targetRotation.x -= this.momentum.x;
      this.momentum.x *= 0.95;
      this.momentum.y *= 0.95;
    }
    
    // Smooth lerp to target
    this.rotation.x += (this.targetRotation.x - this.rotation.x) * 0.08;
    this.rotation.y += (this.targetRotation.y - this.rotation.y) * 0.08;
    
    this.group.style.transform = `rotateX(${this.rotation.x}deg) rotateY(${this.rotation.y}deg)`;
    
    // Block spring physics
    this.blocks.forEach(b => {
      ['x','y','z'].forEach(a => {
        const diff = b.target[a] - b.offset[a];
        b.vel[a] += diff * 0.15;
        b.vel[a] *= 0.7;
        b.offset[a] += b.vel[a];
      });
      b.el.style.transform = `translate3d(${b.baseX + b.offset.x}px, ${b.baseY + b.offset.y}px, ${b.baseZ + b.offset.z}px)`;
    });
    
    requestAnimationFrame(() => this.animate());
  }
}

// ============================================
// ETCHED ICON
// ============================================
class EtchedIcon {
  constructor(container, type, size) {
    this.container = container;
    this.type = type;
    this.size = size;
    this.rotation = 0;
    this.bob = 0;
    this.bobDir = 1;
    this.build();
    this.animate();
  }
  
  build() {
    this.wrapper = document.createElement('div');
    this.wrapper.style.cssText = `width:${this.size}px;height:${this.size}px;perspective:${this.size*3}px;display:flex;align-items:center;justify-content:center;`;
    
    this.icon = document.createElement('div');
    this.icon.style.cssText = `width:${this.size*0.8}px;height:${this.size*0.8}px;transform-style:preserve-3d;position:relative;will-change:transform;`;
    
    const s = this.size * 0.8;
    const etch = (w, h, x, y, r = 2) => {
      const e = document.createElement('div');
      e.style.cssText = `
        position:absolute;width:${w}px;height:${h}px;left:${x}px;top:${y}px;border-radius:${r}px;
        background:linear-gradient(145deg,rgba(10, 6, 15, 0.7),rgba(255, 255, 255, 0.04));
        box-shadow:inset 2px 2px 4px rgba(0,0,0,0.5),inset -1px -1px 2px rgba(255, 255, 255, 0.03),0 1px 0 rgba(168,130,255,0.1);
      `;
      return e;
    };
    
    if (this.type === 'chat') {
      this.icon.appendChild(etch(s*0.75, s*0.5, s*0.12, s*0.12, 6));
      const tail = document.createElement('div');
      tail.style.cssText = `position:absolute;width:0;height:0;left:${s*0.15}px;top:${s*0.58}px;border-left:${s*0.12}px solid transparent;border-right:${s*0.08}px solid transparent;border-top:${s*0.15}px solid rgba(76,29,149,0.5);`;
      this.icon.appendChild(tail);
      [0.25, 0.38, 0.51].forEach((t, i) => this.icon.appendChild(etch(s*(0.45-i*0.08), s*0.06, s*0.22, s*t, 2)));
    } else {
      this.icon.appendChild(etch(s*0.45, s*0.45, s*0.15, s*0.35, 3));
      [[s*0.15,s*0.35,s*0.32,s*0.15],[s*0.6,s*0.35,s*0.77,s*0.15],[s*0.32,s*0.15,s*0.77,s*0.15],[s*0.6,s*0.8,s*0.77,s*0.6],[s*0.77,s*0.15,s*0.77,s*0.6]].forEach(([x1,y1,x2,y2]) => {
        const len = Math.sqrt((x2-x1)**2+(y2-y1)**2);
        const ang = Math.atan2(y2-y1,x2-x1)*180/Math.PI;
        const l = document.createElement('div');
        l.style.cssText = `position:absolute;width:${len}px;height:3px;left:${x1}px;top:${y1}px;background:linear-gradient(180deg,rgba(10, 6, 15, 0.7),rgba(255, 255, 255, 0.03));transform-origin:left center;transform:rotate(${ang}deg);border-radius:1px;box-shadow:inset 1px 1px 2px rgba(0,0,0,0.4),0 1px 0 rgba(168,130,255,0.1);`;
        this.icon.appendChild(l);
      });
    }
    
    this.wrapper.appendChild(this.icon);
    this.container.appendChild(this.wrapper);
  }
  
  animate() {
    this.rotation += 0.6;
    this.bob += 0.02 * this.bobDir;
    if (Math.abs(this.bob) > 2) this.bobDir *= -1;
    this.icon.style.transform = `rotateY(${this.rotation}deg) translateY(${this.bob}px)`;
    requestAnimationFrame(() => this.animate());
  }
}

